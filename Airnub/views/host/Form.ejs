<%- include('../partials/head') %>
<link rel="stylesheet" href="output.css">
</head>
<body>
  <%- include('../partials/header') %>
  <div class="h-screen bg-gradient-to-b from-red-200 to-gray-100 flex flex-col justify-center items-center lg:px-24 px-10 overflow-auto">
    <div class="flex-col items-center justify-center text-center font-serif border-4 border-gray-600 rounded-lg w-fit p-14 pb-10 pt-8 mt-12">
      <h2 class="text-3xl fold-bold mb-7 text-red-800">Register Your Home here :</h2>
      <form action="/host/add-home" method="post">
        <label for="name" class="text-lg">House Name: </label>
        <input type="text" name="houseName" id="name" placeholder="Enter Your House Name" 
        class="border border-gray-400 min-w-80 text-base rounded-md m-2 p-1"> <br>

        <label for="location" class="text-lg">House City: </label>
        <input type="text" name="city" id="location" placeholder="Enter City"
        class="border border-gray-400 min-w-80 text-base rounded-md m-2 p-1"> <br>

        <label for="cost" class="text-lg">Prices : </label>
        <input type="text" name="prices" id="cost" placeholder="Enter Prices"
        class="border border-gray-400 min-w-80 text-base rounded-md m-2 p-1"> <br>

        <label for="rating" class="text-lg">House Rating: </label>
        <input type="number" name="rating" id="rating" placeholder="Enter Rating"
        class="border border-gray-400 min-w-80 text-base rounded-md m-2 p-1 "> <br>

        <label for="url" class="text-lg">Photo Url: </label>
        <input type="text" name="photoUrl" id="url" placeholder="Enter Photo Url"
        class="border border-gray-400 min-w-80 text-base rounded-md m-2 p-1"> <br>

        <input type="submit" 
        class="mt-3 block w-full px-4 py-2 rounded-lg bg-gradient-to-r from-red-600 to-red-400 font-bold cursor-pointer text-gray-100 font-serif">
      </form>
    </div>
  </div>
</body>
</html>
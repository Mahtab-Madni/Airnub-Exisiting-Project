<%- include('../partials/head') %>
<link rel="stylesheet" href="output.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>
  <%- include('../partials/header') %>
  <div class="min-h-screen w-full py-16 bg-gradient-to-b from-red-200 to-gray-100 flex items-center justify-center">
    <div class="backdrop-blur-md bg-white/60 rounded-3xl shadow-2xl p-1 mt-5">
      <form action="/login" method="post" class="bg-gradient-to-br from-red-200 to-gray-100 shadow-xl rounded-2xl p-10 w-full max-w-lg border border-red-300">
        <div class="flex flex-col items-center mb-6">
          <div class="bg-red-100 rounded-full p-4 shadow-md mb-2">
            <i class="fa-solid fa-right-to-bracket text-red-500 text-3xl"></i>
          </div>
          <h2 class="text-3xl font-extrabold text-gray-800 mb-1">Welcome Back</h2>
          <p class="text-gray-500 text-sm">Login to your account</p>
        </div>

        <%- include('../partials/errors') %>

        <div class="flex flex-col mb-4 <%= errors.length > 0 ? 'w-full' : '' %>">
          <label for="email" class="mb-1 text-sm font-medium">Email</label>
          <div class="relative <%= errors.length > 0 ? 'w-full' : '' %>">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"><i class="fa fa-envelope"></i></span>
            <input type="email" name="email" id="email" required value="<%= oldInput.email ? oldInput.email : '' %>" class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 pl-10 <%= errors.length > 0 ? 'w-full' : '' %>" placeholder="Enter your email">
          </div>
        </div>

        <div class="flex flex-col mb-6 <%= errors.length > 0 ? 'w-full' : '' %>">
          <label for="password" class="mb-1 text-sm font-medium">Password</label>
          <div class="relative <%= errors.length > 0 ? 'w-full' : '' %>">
            <span class="absolute left-3 top-1/2 -translate-y-1/2 text-gray-400"><i class="fa fa-lock"></i></span>
            <input type="password" name="password" id="password" required class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 pl-10 <%= errors.length > 0 ? 'w-full' : '' %>" placeholder="Enter your password">
          </div>
        </div>

        <button type="submit" class="w-full bg-red-500 text-white font-semibold px-4 py-2 rounded-xl shadow-lg hover:bg-red-600 transform hover:scale-105 transition mt-3">Login</button>

        <p class="text-sm text-center mt-4">Don't have an account?
          <a href="/signup" class="text-red-500 hover:underline">SignUp</a>
        </p>
      </form>
    </div>
  </div>
</body>
</html>
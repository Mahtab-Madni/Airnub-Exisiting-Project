<%- include('../partials/head') %>
<link rel="stylesheet" href="output.css">
</head>
<body>
  <%- include('../partials/header') %>
  <div class="min-h-screen w-full py-16 bg-gradient-to-b from-red-200 to-gray-100 shadow-lg mt-7">
    <div class="flex items-center justify-center w-full"> 
      <form action="/<%= SignUp ? 'signup' : 'login'%>" method="post" class="bg-gradient-to-br from-red-200 to-gray-100 shadow-xl rounded-2xl p-8 w-full max-w-lg border-2 border-red-400"> 
        <h2 class="text-2xl font-bold text-center mb-4"><%= SignUp ? "Create your Account" : "Login" %></h2>

        <% if(SignUp == true) { %>
          <div class="flex flex-col">
          <label for="name" class="mb-1 text-sm font-medium">Name</label>
          <input type="text" name="name" id="name" required class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-2" placeholder="Enter your name">
        </div>
        <% } %>

        <div class="flex flex-col">
          <label for="email" class="mb-1 text-sm font-medium">Email</label>
          <input type="email" name="email" id="email" required class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-2" placeholder="Enter your email">
        </div>

        <% if(SignUp == true) { %>
          <div class="flex flex-col">
          <label for="phoneNo" class="mb-1 text-sm font-medium">Mobile No.</label>
          <input type="tel" name="phoneNo" id="phoneNo" required class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 mb-2" placeholder="Enter your mobile number">
        </div>
        <% } %>

        <div class="flex flex-col mt-2">
          <label for="password" class="mb-1 text-sm font-medium">Password</label>
          <input type="password" name="password" id="password" required class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 " placeholder="Enter your password">
        </div>

        <button type="submit" class="w-full bg-red-500 text-white font-semibold px-4 py-2 rounded-xl shadow-lg hover:bg-red-600 transform hover:scale-105 transition mt-3"><%= SignUp ? "Sign Up" : "Login" %></button>

        <p class="text-sm text-center mt-2"><%= SignUp ? "Already have an account?" : "Don't have an account?" %>
          <% if(SignUp == true) { %>
              <a href="/login?SignUp=false" class="text-red-500 hover:underline">Login</a>
          <% } else { %>
            <a href="/signup?SignUp=true" class="text-red-500 hover:underline">SignUp</a>
          <% } %>
        </p>
      </form>
    </div>
  </div>
</body>
</html>
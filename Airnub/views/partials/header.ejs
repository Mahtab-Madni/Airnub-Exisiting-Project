<header class="bg-rose-500 shadow-lg fixed top-0 w-full z-50">
  <nav class="container mx-auto flex justify-between items-center py-4 px-6">
    <a href="" class="text-2xl font-bold text-white tracking-wide hover:scale-105 translate-transform duration-300">Airnub</a> 

    <ul class="flex space-x-8 ">
      
      <li>
        <a href="/" class="relative group text-lg font-medium transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[2px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Index' ?  'text-cyan-300 bg-rose-400'  : 'text-gray-700 bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1">Index
        </a>
      </li>

      <% if(isLoggedIn) { %>
        <li>
          <a href="/home-list" class="relative group text-lg font-medium transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[2px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Home List' ?  'text-cyan-300 bg-rose-400'  : 'text-gray-700 bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1">Homes List
          </a>
        </li> 

        <li>
          <a href="/favorites" class="relative group text-lg font-medium transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[2px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Favorites' ?  'text-cyan-300 bg-rose-400'  : 'text-gray-700 bg-transparent' %> hover:text-cyan-300  rounded-xl px-3 py-1">Favorites
          </a>
        </li>

        <li>
          <a href="/bookings" class="relative group text-lg font-medium transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[2px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Bookings' ?  'text-cyan-300 bg-rose-400'  : 'text-gray-700 bg-transparent' %> hover:text-cyan-300  rounded-xl px-3 py-1">Bookings
          </a>
        </li>

        <li>
          <a href="/host/host-home-list" class="relative group text-lg font-medium transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[2px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Host Home' ?  'text-cyan-300 bg-rose-400'  : 'text-gray-700 bg-transparent' %> hover:text-cyan-300  rounded-xl px-3 py-1">Host Home
          </a>
        </li>

        <li>
          <a href="/host/add-home" class="relative group text-lg font-medium transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[2px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Add Homes' ?  'text-cyan-300 bg-rose-400'  : 'text-gray-700 bg-transparent' %> hover:text-cyan-300  rounded-xl px-3 py-1">Add Homes
          </a>
        </li>
      <% } %>

      <% if(!isLoggedIn) { %>
        <a href="/login" class="ml-6 px-3 py-2 bg-white text-red-500 font-semibold rounded-lg shadow hover:bg-gray-200 hover:shadow-lg transform hover:scale-105 transition">Login</a>
      <% } else { %>
        <form action="/logout" method="post">
          <button type="submit" class="ml-6 px-3 py-2 bg-white text-red-500 font-semibold rounded-lg shadow hover:bg-gray-200 hover:shadow-lg transform hover:scale-105 transition">Logout</button>
        </form>
      <% } %>
    </ul>
  </nav>
</header>
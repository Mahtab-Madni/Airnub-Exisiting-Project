<header
  class="bg-rose-500/80 backdrop-blur-md shadow-xl fixed top-0 w-full z-50 rounded-b-2xl"
>
  <nav class="container mx-auto flex justify-between items-center py-4 px-6">
    <a
      href="/"
      class="text-3xl font-extrabold text-white tracking-wider drop-shadow-lg font-sans hover:scale-105 transition-transform duration-300"
      >Airnub</a
    >
    <ul class="flex space-x-8 items-center">
      <li>
        <a
          href="/"
          class="relative group text-lg font-semibold transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[3px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:rounded-full after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Index' ? 'text-cyan-300 bg-rose-400' : 'text-white bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1"
          >Index</a
        >
      </li>
      <% if(isLoggedIn) { %> <% if(user && user.userType === 'guest' ) { %>
      <li>
        <a
          href="/home-list"
          class="relative group text-lg font-semibold transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[3px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:rounded-full after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Home List' ? 'text-cyan-300 bg-rose-400' : 'text-white bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1"
          >Homes List</a
        >
      </li>
      <li>
        <a
          href="/favorites"
          class="relative group text-lg font-semibold transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[3px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:rounded-full after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Favorites' ? 'text-cyan-300 bg-rose-400' : 'text-white bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1"
          >Favorites</a
        >
      </li>
      <li>
        <a
          href="/bookings"
          class="relative group text-lg font-semibold transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[3px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:rounded-full after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Bookings' ? 'text-cyan-300 bg-rose-400' : 'text-white bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1"
          >Bookings</a
        >
      </li>
      <% } else { %>
      <li>
        <a
          href="/host/host-home-list"
          class="relative group text-lg font-semibold transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[3px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:rounded-full after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Host Home' ? 'text-cyan-300 bg-rose-400' : 'text-white bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1"
          >Host Home</a
        >
      </li>
      <li>
        <a
          href="/host/add-home"
          class="relative group text-lg font-semibold transition-colors duration-300 after:content-[''] after:absolute after:w-0 after:h-[3px] after:bg-cyan-300 after:left-0 after:-bottom-1 after:rounded-full after:transition-all after:duration-300 hover:after:w-full <%= currPage === 'Add Homes' ? 'text-cyan-300 bg-rose-400' : 'text-white bg-transparent' %> hover:text-cyan-300 rounded-xl px-3 py-1"
          >Add Homes</a
        >
      </li>
      <% } %> <% } %> <% if(!isLoggedIn) { %>
        <a
          href="/login"
          class="ml-6 px-4 py-2 bg-white/90 text-rose-500 font-bold rounded-xl shadow hover:bg-cyan-100 hover:text-rose-600 hover:shadow-lg transform hover:scale-105 transition-all duration-200"
          >Login</a
        >
      <% } else { %>
        <% if(user && user.firstName) { %>
          <span
            class="ml-4 px-3 py-1 bg-transparent text-purple-800 font-semibold text-lg flex items-center"
          >
           Hey, <%= user.firstName %>
          </span>
        <% } %>
        <form action="/logout" method="post">
          <button
            type="submit"
            class="ml-3 px-4 py-2 bg-white/90 text-rose-500 font-bold rounded-xl shadow hover:bg-cyan-100 hover:text-rose-600 hover:shadow-lg transform hover:scale-105 transition-all duration-200 "
          >
            Logout
          </button>
        </form>
      <% } %>
    </ul>
  </nav>
</header>

<%- include('../partials/head') %>
<link rel="stylesheet" href="output.css">
</head>
<body >
  <%- include('../partials/header') %>
  <div class="min-h-screen w-full py-16 bg-gradient-to-b from-red-200 to-gray-100 font-serif shadow-lg mt-7">
    <div class="max-w-6xl mx-auto text-center">
      <h1 class="text-7xl font-extrabold text-gray-900 drop-shadow-lg mb-4">Welcome to Airnub</h1>
      <p class="text-lg text-gray-800 opacity-90">
        Find your next cozy stay-fast, simple, delightful
      </p>
    </div>
  
    <div class="max-w-6xl mx-auto py-12  px-6" >
      <h3 class="text-3xl font-bold text-center text-red-600 mb-10">
        Here Our Registered Homes:
      </h3>

      <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
        
        <% registeredHomes.forEach(home => { %>
          
          <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200 hover:shadow-2xl transition duration-300 flex flex-col" >
            <a href="" class="block group"></a>
              <img src="<%= home.photo %>" alt="<%= home.houseName %>" class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300">
              <div class="p-4">
                <h4 class="text-xl font-semibold text-gray-800 group-hover:text-cyan-600"><%= home.houseName %></h4>
                <p class="text-gray-500 text-sm"><%= home.city %></p>

                <div class="flex justify-between items-center mt-2">
                  <span class="text-lg font-bold text-red-600">&#x20B9 <%= home.prices %>/night</span>
                  <span class="text-yellow-500 px-2 py-1 rounded-lg text-base">
                    <%= home.rating %> &#11088
                  </span>
                </div>
              </div>
            </a>
            <div class="p-4 border-t border-gray-200">
              <a href="" class="w-full block text-center bg-red-600 text-white py-2 rounded-xl font-semibold hover:bg-red-700 transition">Book</a>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>
</body>
</html>